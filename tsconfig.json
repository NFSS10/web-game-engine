{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@modules": ["modules"],
            "@src/*": ["./src/*"]
        },
        "outDir": "./dist/esm",
        "module": "es2022",
        "target": "es2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "skipLibCheck": true
    },
    "include": ["declarations.d.ts", "src/**/*", "modules/**/*"],
    "exclude": ["node_modules"]
}
